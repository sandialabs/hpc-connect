{% extends "hpcc-submit.sh.in" %}
{% block header %}
#SBATCH --nodes={{ nodes }}
#SBATCH --ntasks-per-node={{ cpus_per_node }}
#SBATCH --cpus-per-task=1
#SBATCH --time={{ hhmmss(time * 1.25, threshold=0) }}
#SBATCH --job-name={{ job.name }}
{% if job.error %}
#SBATCH --error={{ job.error }}
{% endif %}
{% if job.output %}
#SBATCH --output={{ job.output }}
{% endif %}
{% for arg in args %}
#SBATCH {{ arg }}
{% endfor %}
{% endblock header %}
