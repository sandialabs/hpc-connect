{% extends "hpcc-submit.sh.in" %}
{% block header %}
#FLUX: --nodes={{ nodes }}
#FLUX: --nslots={{ tasks }}
#FLUX: --cores-per-slot={{ cpus_per_task }}
#FLUX: --gpus-per-slot={{ gpus_per_task }}
